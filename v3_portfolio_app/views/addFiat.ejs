<div class="container new-coin-heading">
	<div class="row">
		<div class="col-lg-12">
			<h1>Add fiat to your portfolio</h1>
		</div>
  </div>
</div>

<div class="container new-coin-container">
  <form action="/addFiat" method="POST">
		<div class="form-group" style="display: none;">
			<input type="text" name="referer" value="<%= back %>">
		</div>
    <div class="form-group name">
      <label for="currency">Currency</label>
      <input type="text" class="form-control" id="fiat-currency" name="fiat[currency]" autocomplete="off" placeholder="Currency" readonly required>
    </div>
		<div class="form-group symbol">
      <label for="symbol">Symbol</label>
      <input type="text" class="form-control" id="fiat-symbol" name="fiat[symbol]" autocomplete="off" placeholder="Symbol" readonly required>
    </div>
		<div class="form-group" style="display: none;">
      <label for="symbol">Show</label>
      <input type="text" class="form-control" id="fiat-show" name="fiat[show]">
    </div>
		<div class="form-group">
			<label for="exchange">Exchange</label>
	    <select class="form-control" id="exchange" name="fiat[exchange]" required>
				<option value="" selected disabled>Select an Exchange</option>
				<% exchange.forEach(function(ex){ %>
					<% if (ex.type == 'fiat-btc') { %>
						<option><%= ex.exchange %></option>
					<% } %>
				<% }) %>
	    </select>
	  </div>
		<div class="form-group units">
      <label for="amount">Amount</label>
      <input type="text" class="form-control" name="fiat[amount]" id="amount" autocomplete="off" placeholder="Amount" required>
    </div>
    <div class="form-group">
			<input type="submit" class="btn btn-lg btn-primary btn-block" id="click" name="" value="Submit">
    </div>
  </form>
</div>

<% include partials/footer %>
